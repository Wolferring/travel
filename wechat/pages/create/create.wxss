.map_container{ 
  height: 400rpx; 
  width: 100%; 
} 

.map { 
  height: 100%; 
  width: 100%; 
} 
.page-body{
  position: relative;
}
.search-result{
  position: absolute;
  top: 100%;
  z-index: 999;
  width: 100%;
  max-height: 600rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-top:none;
  box-shadow: 0 10rpx 30rpx #ddd;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.search-item{
  padding: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.search-item text{
  line-height: 80rpx;
  font-size: 28rpx;
}
.search-input{
  padding:0 10rpx;
  width: 100%;
  height: 100rpx;
}
.search-input button{
  width: 200rpx;
}
.search-input input{
  width: 100%;
  height: 80rpx;
  line-height: 60rpx;
}
.input-cell{
  border-bottom: 1rpx solid #eee;
  height: 100%;
  display: flex;
  align-items: center;
}
.input-cell .input-label{
  flex: 0 0 100rpx;
  text-align: left;
}
.input-cell .weui-cell__bd{
  flex: 1;
  padding-left: 0rpx;
  height: 100%;
}
.input-cell input,.input-cell .input{
  height: 80rpx;
  padding: 20rpx 0;
  padding-left: 20rpx;
}
.input-cell textarea{
  width: 100%;
  line-height: 48rpx;
  padding: 40rpx 0;
  padding-left: 20rpx;
}
.imagePreviewList{
  padding: 40rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.imagePreviewItem{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  border:1rpx solid #dedede;
  color: #777;
  margin: 20rpx;
  overflow: hidden;
  position: relative;
}
.imagePreviewItem .remove{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  right: 0;
  top: 0;
}
.imagePreviewItem .remove image{
  width: 100%;
  height: 100%;
}
.imagePreviewItem .image{
  width: 200rpx;
  height: 200rpx;
}
.imagePreviewItem.waiting{

}
.imagePreviewItem.uploading{
  border-color: #45a1e2;
  box-shadow: inset 0px 0px 10px 0px #45a1e2;  
}
.imagePreviewItem.uploaded{
  border-color: #07c160;
  box-shadow: inset 0px 0px 10px 0px #07c160;
}