
<view class="container">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="page-body">
        <view class="page-section">
          <view class="input-cell flex">
              <text class="input-label">用户名</text>
              <view class="weui-cell__bd">
                <input class="weui-input" name="username" placeholder="注册时填写的用户名" />
              </view>
            </view>
        </view>
        <view class="page-section">
          <view class="input-cell flex">
              <text class="input-label">密码</text>
              <view class="weui-cell__bd" >
                <input class="weui-input" confirm-type="done" password name="password" placeholder="密码" />
              </view>
            </view>
        </view>      

        <view class="page-section flex" style="margin: 30rpx 0;">
          <button type="primary" style="width: 100%;" formType="submit">登录</button>
        </view>
      </view>

    </form>
    <view class="flex-center">
      <navigator style="text-align: center;color: #999;" url="/pages/register/register">没有账号？注册</navigator>
    </view>

</view>