.poi-edit-container{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background-color: rgba(0,0,0,.7);
  z-index: 999;
}
.poi-edit{
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 10rpx;
  width: 100%;
  transition: bottom .3s ease;
}

.poi-edit textarea{
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  width: 100%;
  padding: 20rpx;
  margin-bottom: 30rpx;
  line-height: 2;
  font-size: 26rpx;
  color: #666;
}
.poi-container{
  padding: 40rpx 20rpx;
  padding-left: 50rpx;
  position: relative;
}
.poi-container::after{
  /* box-shadow: 0 0 30rpx 1rpx #333; */
  content: ' ';
  position: absolute;
  display: block;
  width: 2rpx;
  height: 100%;
  background-color: #eee;
  left: 20rpx;
  top: 0;
}
.poi-heading{
  margin-bottom: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.poi-heading::after{
  content: ' ';
  position: absolute;
  display: block;
  width: calc(100% + 30rpx);
  height: 2rpx;
  background-color: #eee;
  left: -30rpx;
  bottom: 0;
  /* box-shadow: 0 0 30rpx 1rpx #333; */
}
.poi-heading::before{
  content: ' ';
  position: absolute;
  display: block;
  width: 30rpx;
  height: 30rpx;
  background-image: url("data:image/png;base64,");
  background-position: center;
  background-size: cover;
  left: -45rpx;
  background-color: #fff;
  bottom: -15rpx;
  z-index: 99;
  border-radius: 15rpx;
}
.poi-heading .h1{
  font-size: 36rpx;
  font-weight: 500;
  /* text-shadow: 0px 0px 8rpx #ccc; */
  color:rgba(0,0,0,0.3);
  text-shadow:1px 3px 6px #fff,0 0 0 #000,1px 3px 6px #fff;
}
.card{
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0rpx 28rpx rgb(0 0 0 / 20%);
  margin: 20rpx 0;
  overflow: hidden;  
}
.poi-content{
  padding: 20rpx 20rpx;
}
.poi-content .h3{
  line-height: 2;
  font-weight: 500;
  font-size: 36rpx;
}
.poi-content .h4{
  line-height: 2;
  color: #666;
  font-weight: normal;
  font-size: 28rpx;
}
.poi-content .p{
  color: #999;
  line-height: 1.8;
  font-size: 26rpx;
}
.poi-image{
  height: 600rpx;
  overflow: hidden;
  background-color: #dedede;
  display: grid;
  grid-column-gap: 4rpx;
  grid-row-gap: 4rpx;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: repeat(1fr);

}
.poi-image .picture{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#dedede;
  height: auto;
  text-align: center;   
  color: #fff;
  font-size: 120rpx;
  overflow: hidden;
  cursor: zoom-in;
}

.poi-image image{
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.poi-container .poi-image.grid-mode-x{
  grid-template-columns: initial;

}
.grid-mode-1 .picture:last-of-type{ 
  grid-column: 1 / span 2;
  grid-row: 1 / span 1;      
}
.grid-mode-3 .picture:last-of-type{ 
  grid-column: 1 / span 2;
  grid-row: 1 / span 2;      
}